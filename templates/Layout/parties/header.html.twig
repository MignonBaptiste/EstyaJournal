<!-----message flash---->

{% for type, messages in app.flashes(['success','danger','info']) %}
  {% for message in messages %}
    <div class="alert alert-{{ type }} text-center mb-0">
      {{ message }}
    </div>
  {% endfor %}

{% endfor %}

    <header>
      <div class="container">
        <div class="row d-flex align-items-center">
          <h1 style="font-family: 'Pirata One', cursive;" class="text-end col-7">Estya Journal</h1>
          <h5 class="col-5 text-center pt-2">
            {%if app.user %}
                 <button class="btn btn-primary text-end" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <span class="icon-user"></span> {{ app.user.Prenoms }} {{ app.user.Nom }}
                  </button>
                  <div class="offcanvas offcanvas-end" tabindex="0" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-body">
                        <p class="text-center">MES INFORMATIONS</p> <br>
                        <p class="text-start">NOM : {{app.user.Nom}} </p>

                         <p class="text-start">PRENOMS : {{app.user.Prenoms}}</p>

                        <p class="text-start">E-mail : {{app.user.email}}</p> <br>

                        <a href="#" class="btn btn-danger btn-block">Cr√©er un nouvel article</a>

                        <a href="#" class="btn btn-success btn-block">Modifier mes informations</a> <br><br>

                        <a href="{{ path('app_logout') }}" class="btn btn-primary btn-block">SE DECONNECTER</a>
                  </div>

                  {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-danger">SE CONNECTER  </a>
                    <a href="{{ path('app_register') }}" class="btn btn-primary">S'INSCRIRE</a>
                {% endif %}
          </h5>
        </div>
      </div>
      <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand text-light" href="{{ path('app_accueil') }}" >Estya Journal</a>
            <ul class="navbar-nav justify-content-center flex-grow-1 pe-3">
              <li class="nav-item hover-zoom">
                <a href="{{ path('app_accueil') }}" class="nav-link text-light">Accueil</a>
              </li>
              {% for link in categoryList %}
                <li><a href="{{ path('app_new_by_category_show',{'id':link.id}) }}" class="nav-link text-light">{{ link.name}}</a></li>
              {% endfor %}
              <li class="nav-item">
                <a href="{{ path('app_contact') }}" class="nav-link text-light">Contact</a>
              </li>
            </ul>
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Rechercher</button>
            </form>
          </div>
        </div>
      </nav>
    </header>