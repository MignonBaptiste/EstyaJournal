{% extends 'Layout/base.html.twig' %}
{% block title %}{{ single_news.Title }}{% endblock %}
{% block body %}
<section class="site-section py-lg">
      <div class="container">
        
        <div class="row blog-entries element-animate">

          <div class="col-md-12 col-lg-8 main-content">
            
            <div class="post-content-body">
                <img style="width:100%" class="img-fluid rounded" src="{{ vich_uploader_asset(single_news, 'imageFile') }}">
                <h1>{{ single_news.title }}</h1>
                <label>Description</label>
                <p>{{ single_news.description}}</p>  
            


               <div class="comment-form-wrap pt-5">
                <h3 class="mb-5">Laisser un commentaire</h3>
                {% if app.user%}

                  {{ form_start (form)}}
                    <label>Commentaires</label>
                    {{ form_widget(form.content,{'attr':{'class':'form form-control','placeholder':'Ecrivez votre commentaire'}}) }}<br><br>
                    <input type="submit" value="Envoyer" class="btn btn-primary">
                  {{ form_end(form) }}

                  {% else %}
                  Vous devez vous connecter pour pouvoir laisser un commentaire - <a href="{{ path('app_login') }}">Se connecter</a>

                {% endif %} <br>
                  <ul class="comment-list">
                  {% for comment in comments %}
                      <li class="comment">
                        <div class="comment-body">
                          <h3>{{ comment.author.nom }} {{ comment.author.prenoms }}</h3>
                          <div class="meta">{{ comment.createdAt|ago }}</div>
                          <p>{{ comment.content }}</p>
                          <p><a href="#" class="reply rounded">Répondre</a></p>
                        </div>
                      </li>
                  {% endfor %} 
                  </ul> 

            </div>

          </div> 

